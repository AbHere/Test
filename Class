// Put this helper in your control file (top-level, private)
private sealed class Item<T>
{
    public string Text { get; set; }
    public T Value { get; set; }
    public override string ToString() => Text;
}

// --- IsEntity (bool?) ---
var isEntityItems = new List<Item<bool?>>
{
    new Item<bool?>{ Text = "",      Value = null  },
    new Item<bool?>{ Text = "True",  Value = true  },
    new Item<bool?>{ Text = "False", Value = false },
};

var colIsEntity = new DataGridViewComboBoxColumn
{
    Name = "colIsEntity",
    HeaderText = "Is Entity",
    DataPropertyName = "IsEntity",                  // TierRow.IsEntity (bool?)
    DataSource = isEntityItems,                     // <-- typed datasource
    DisplayMember = "Text",
    ValueMember = "Value",
    ValueType = typeof(bool),                       // value type of the property
    DisplayStyle = DataGridViewComboBoxDisplayStyle.DropDownButton,
    FlatStyle = FlatStyle.Standard,
    Width = 90
};
dataGridView1.Columns.Add(colIsEntity);

// --- Parent (ParentOption enum) ---
var parentItems = new List<Item<ParentOption>>
{
    new Item<ParentOption>{ Text = "",     Value = ParentOption.None },
    new Item<ParentOption>{ Text = "INT",  Value = ParentOption.INT  },
    new Item<ParentOption>{ Text = "ISDA", Value = ParentOption.ISDA },
    new Item<ParentOption>{ Text = "AFB",  Value = ParentOption.AFB  },
    new Item<ParentOption>{ Text = "EXT",  Value = ParentOption.EXT  },
};

var colParent = new DataGridViewComboBoxColumn
{
    Name = "colParent",
    HeaderText = "Parent",
    DataPropertyName = "Parent",                     // TierRow.Parent (ParentOption)
    DataSource = parentItems,                        // <-- typed datasource
    DisplayMember = "Text",
    ValueMember = "Value",
    ValueType = typeof(ParentOption),
    DisplayStyle = DataGridViewComboBoxDisplayStyle.DropDownButton,
    FlatStyle = FlatStyle.Standard,
    Width = 120
};
dataGridView1.Columns.Add(colParent);

-------------------


row.IsEntity = ParseHelpers.ParseNullableBool(entTxt); // bool?
row.Parent   = ParseHelpers.ParseParent(parTxt);       // ParentOption (INT/ISDA/AFB/EXT)
